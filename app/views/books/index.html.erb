<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<div id="books">
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>
        Name
      </th>
      <td>Price</td>
      <th>Show</th>
    </tr>
    </thead>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.title %>
        </td>
        <td>
          <%= Money.new(book.price, "INR").format(south_asian_number_formatting: true)  %>
        </td>
        <td>
          <%= link_to "Edit this book", edit_book_path(book) %>
          |
          <%= link_to "Show this book", book %>
          |
          <%= link_to "Purchase", book_new_purchase_path(book) %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to "New book", new_book_path %>
